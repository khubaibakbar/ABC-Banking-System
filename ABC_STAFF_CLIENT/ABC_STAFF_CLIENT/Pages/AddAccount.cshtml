@page
@model ABC_STAFF_CLIENT.Pages.AddAccountModel
@{
}
<h3>Create New Customer Account</h3>
<div class="col-md-6">
<form method="post">
        <div class="form-group">
            <label for="Names">Full Names</label>
            <input type="text" class="form-control" name="Names" required />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" name="Email" required />
        </div>
        <div class="form-group">
            <label for="Phpne">Phone</label>
            <input type="text" class="form-control" name="Phone" required />
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" name="Address" required />
        </div>
        <div class="form-group">
            <label for="Names">Branch</label>
            <input type="text" class="form-control" name="Branch" required />
        </div>
        <div class="form-group">
            <button type="submit" class=" btn btn-primary" >Add Customer Account</button>
        </div>

</form>
</div>

@section scripts {
    <script>
        function showAlert(message) {
            alert(message);
        }
    </script>

    <script>
        @if (ViewData["AlertMessage"] != null)
        {
            <text>
                showAlert('@Html.Raw(ViewData["AlertMessage"])');
            </text>
        }
    </script>
}
