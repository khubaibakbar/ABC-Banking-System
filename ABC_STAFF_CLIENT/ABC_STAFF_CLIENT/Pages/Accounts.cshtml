@page
@model ABC_STAFF_CLIENT.Pages.AccountsModel
@{
    
}
<h1>Existing Accounts</h1>
<table class="table table-bordered">
    <thead>
        <th>Account Number</th>
        <th>Branch</th>
        <th>Customer Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Balance</th>
        <th>Overdraft</th>
        <th>View Transactions</th>
    </thead>
    <tbody>
        @foreach (var acc in Model.accounts)
        {
            <tr>
                <td>@acc.AccountNumber</td>
                <td>@acc.Branch</td>
                <td>@acc.Customer.Names</td>
                <td>@acc.Customer.Email</td>
                <td>@acc.Customer.Phone</td>
                <td>@acc.Customer.Address</td>
                <td>@acc.Balance</td>
                <td>@acc.Overdraft</td>
                <td>
                    <a class="btn btn-success" href="/Transactions?accountNumber=@acc.AccountNumber">View Transactions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
